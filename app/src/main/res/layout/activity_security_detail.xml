<layout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fragment_sign_in_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
                android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_player"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    android:background="@color/colorPrimary"
                    android:elevation="@dimen/elevation_header"
                    tools:ignore="UnusedAttribute">
                    <TextView android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@string/account_detail_title'
                        tools:ignore="PrivateResource"
                        style="@style/Topeka.TextAppearance.Title.Inverse"
                        android:layout_gravity="center_vertical|start" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/account_detail_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--Common-->
                    <LinearLayout
                        style="@style/AccountEditItemContainer">
                        <TextView
                            android:text="@string/account_manage_category"
                            style="@style/AccountEditLabel" />
                        <Spinner
                            android:transitionName="@string/transition_category"
                            android:id="@+id/security_category"
                            android:spinnerMode="dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/AccountDetailItemContainer">
                        <TextView
                            android:text="@string/account_manage_target"
                            style="@style/AccountDetailLabel" />
                        <TextView
                            style="@style/AccountDetailInputText"
                            android:id="@+id/security_title" />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/AccountDetailItemContainer">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="@string/account_password"
                                    android:layout_gravity="left"
                                    android:layout_width="wrap_content"
                                    style="@style/AccountDetailLabel" />
                                <ProgressBar
                                    android:visibility="invisible"
                                    android:id="@+id/dec_progress"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/decrypt_password"
                                    android:src="@drawable/eye_2"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            style="@style/AccountDetailInputText"
                            android:id="@+id/security_password" />
                        <include
                            android:id="@+id/included"
                            layout="@layout/view_password_strength" />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/AccountDetailItemContainer">
                        <TextView
                            android:text="@string/account_summary"
                            style="@style/AccountDetailLabel" />
                        <TextView
                            style="@style/AccountDetailInputText"
                            android:id="@+id/security_summary" />
                    </LinearLayout>

                    <!--Security Account-->
                    <LinearLayout
                        android:id="@+id/account_container"
                        style="@style/AccountDetailItemContainer">
                        <TextView
                            android:text="@string/account_id"
                            style="@style/AccountDetailLabel" />
                        <TextView
                            style="@style/AccountDetailInputText"
                            android:id="@+id/account_id" />
                    </LinearLayout>

                    <!--Security Credit Card-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/credit_card_container"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            style="@style/AccountEditItemContainer">
                            <TextView
                                android:text="@string/credit_card_serial"
                                style="@style/AccountEditLabel" />
                            <TextView
                                style="@style/AccountEditInputText"
                                android:id="@+id/credit_card_serial" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/AccountEditItemContainer">
                            <TextView
                                android:text="@string/credit_card_expire_date"
                                style="@style/AccountEditLabel" />
                            <TextView
                                style="@style/AccountEditInputText"
                                android:id="@+id/credit_card_expire_date" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/update"
            app:fabSize="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/spacing_double"
            android:layout_marginEnd="@dimen/spacing_double"
            android:layout_marginRight="@dimen/spacing_double"
            android:src="@drawable/edit_property"
            app:backgroundTint="@color/colorPrimary" />
    </FrameLayout>
</layout>